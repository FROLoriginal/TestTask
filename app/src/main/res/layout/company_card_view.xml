<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_material_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/company_img"
            android:layout_marginStart="@dimen/standard_material_margin"
            android:layout_marginTop="@dimen/avatar_margin"
            android:layout_marginBottom="@dimen/avatar_margin"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/ic_internet_24dp"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <TextView
            android:id="@+id/company_name"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/avatar_margin"
            android:layout_marginTop="@dimen/avatar_margin"
            android:text="The company's name"
            android:textStyle="normal|bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
